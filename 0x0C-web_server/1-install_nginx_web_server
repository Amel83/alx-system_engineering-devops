#!/usr/bin/env bash
#pleaseeeeee workkkkkkk

sudo apt-get update
sudo apt-get install -y nginx

# Create a simple HTML file with "Hello World!"
echo "<html><body>Hello World!</body></html>" | sudo tee /var/www/html/index.html

# Check if Nginx default configuration exists and back it up
if [ -f /etc/nginx/sites-available/default ]; then
  sudo mv /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak
fi

# Create a new Nginx configuration for port 80
sudo bash -c 'cat <<EOL > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOL'

# Restart Nginx to apply the configuration
sudo service nginx restart

# Clean up old Nginx logs (optional)
sudo rm -f /var/log/nginx/*

echo "Nginx has been installed and configured. You can access it at http://localhost/ or via the server's IP address."

